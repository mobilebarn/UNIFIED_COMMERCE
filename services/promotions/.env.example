# Promotions Service Configuration

# Service Configuration
SERVICE_NAME=promotions
ENVIRONMENT=development
PORT=8007

# Server Configuration
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# PostgreSQL Configuration
POSTGRES_URL=postgres://promotions_user:promotions_pass@localhost:5432/promotions_service?sslmode=disable
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=promotions_user
POSTGRES_PASSWORD=promotions_pass
POSTGRES_DB=promotions_service

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=6

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_DURATION=3600

# Promotion Settings
MAX_PROMOTIONS_PER_MERCHANT=1000
DEFAULT_PROMOTION_PRIORITY=0

# Discount Code Settings
DEFAULT_CODE_LENGTH=8
ALLOW_DUPLICATE_CODES=false
MAX_CODE_USAGE_PER_CUSTOMER=1

# Gift Card Settings
GIFT_CARD_CODE_PREFIX=GC
DEFAULT_GIFT_CARD_CURRENCY=USD
ALLOW_NEGATIVE_BALANCE=false

# Loyalty Program Settings
DEFAULT_POINT_VALUE=1.00
DEFAULT_REWARD_RATIO=100.00
MINIMUM_REDEMPTION_POINTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing Configuration
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Integration Settings
IDENTITY_SERVICE_URL=http://localhost:8001
MERCHANT_ACCOUNT_SERVICE_URL=http://localhost:8002
PRODUCT_CATALOG_SERVICE_URL=http://localhost:8003
INVENTORY_SERVICE_URL=http://localhost:8004
ORDER_SERVICE_URL=http://localhost:8005
CART_CHECKOUT_SERVICE_URL=http://localhost:8006

# File Export Settings
EXPORT_PATH=./exports
MAX_EXPORT_RECORDS=10000

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400  # Daily backups (seconds)
BACKUP_RETENTION_DAYS=30

# Security Settings
ENCRYPT_SENSITIVE_DATA=true
AUDIT_ALL_CHANGES=true