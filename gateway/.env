# GraphQL Gateway Environment Configuration

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration (should match Identity service)
JWT_SECRET=your-secret-key

# Service URLs
IDENTITY_SERVICE_URL=http://localhost:8080/graphql
MERCHANT_SERVICE_URL=http://localhost:8002/graphql
PRODUCT_SERVICE_URL=http://localhost:8003/graphql
INVENTORY_SERVICE_URL=http://localhost:8004/graphql
ORDER_SERVICE_URL=http://localhost:8005/graphql
CART_SERVICE_URL=http://localhost:8006/graphql
PAYMENT_SERVICE_URL=http://localhost:8007/graphql
PROMOTION_SERVICE_URL=http://localhost:8008/graphql

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4000

# Cache Configuration
CACHE_TTL=300
ENABLE_INTROSPECTION=true
ENABLE_PLAYGROUND=true

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
