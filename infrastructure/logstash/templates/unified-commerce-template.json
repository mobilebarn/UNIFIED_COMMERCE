{
  "index_patterns": ["unified-commerce-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "1s",
      "index.mapping.total_fields.limit": 2000
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "level": {
          "type": "keyword",
          "fields": {
            "text": {
              "type": "text"
            }
          }
        },
        "message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "service": {
          "type": "keyword"
        },
        "environment": {
          "type": "keyword"
        },
        "endpoint": {
          "type": "keyword"
        },
        "method": {
          "type": "keyword"
        },
        "status": {
          "type": "short"
        },
        "duration": {
          "type": "float"
        },
        "user_id": {
          "type": "keyword"
        },
        "request_id": {
          "type": "keyword"
        },
        "error_type": {
          "type": "keyword"
        },
        "error_message": {
          "type": "text"
        },
        "function": {
          "type": "keyword"
        },
        "file": {
          "type": "keyword"
        },
        "line": {
          "type": "integer"
        },
        "query": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 1024
            }
          }
        },
        "database": {
          "type": "keyword"
        },
        "table": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        }
      }
    }
  }
}
