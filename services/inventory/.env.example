# Inventory Service Configuration

# Service Configuration
SERVICE_NAME=inventory
ENVIRONMENT=development
PORT=8004

# Server Configuration
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# PostgreSQL Configuration
POSTGRES_URL=postgres://inventory_user:inventory_pass@localhost:5432/inventory_service?sslmode=disable
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=inventory_user
POSTGRES_PASSWORD=inventory_pass
POSTGRES_DB=inventory_service

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_DURATION=3600

# Inventory Settings
LOW_STOCK_CHECK_INTERVAL=3600  # Check for low stock every hour (seconds)
RESERVATION_EXPIRY_CHECK_INTERVAL=300  # Check for expired reservations every 5 minutes (seconds)
DEFAULT_RESERVATION_EXPIRY=1800  # Default reservation expiry time in seconds (30 minutes)

# Stock Alert Settings
ENABLE_STOCK_ALERTS=true
ALERT_CHECK_INTERVAL=3600  # Check for alert conditions every hour (seconds)
EMAIL_ALERTS_ENABLED=true
SLACK_ALERTS_ENABLED=false

# Transfer Settings
AUTO_APPROVE_TRANSFERS=false
TRANSFER_TRACKING_ENABLED=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing Configuration
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Integration Settings
PRODUCT_CATALOG_SERVICE_URL=http://localhost:8003
MERCHANT_ACCOUNT_SERVICE_URL=http://localhost:8002
ORDER_SERVICE_URL=http://localhost:8005

# File Export Settings
EXPORT_PATH=./exports
MAX_EXPORT_RECORDS=10000

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400  # Daily backups (seconds)
BACKUP_RETENTION_DAYS=30