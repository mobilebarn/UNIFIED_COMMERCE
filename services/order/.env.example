# Order Service Configuration

# Service Configuration
SERVICE_NAME=order
ENVIRONMENT=development
PORT=8005

# Server Configuration
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# PostgreSQL Configuration
POSTGRES_URL=postgres://order_user:order_pass@localhost:5432/order_service?sslmode=disable
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=order_user
POSTGRES_PASSWORD=order_pass
POSTGRES_DB=order_service

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_DURATION=3600

# Order Settings
ORDER_NUMBER_PREFIX=ORD
RETURN_NUMBER_PREFIX=RET
AUTO_CONFIRM_ORDERS=false
AUTO_FULFILL_DIGITAL_ORDERS=true
ORDER_EXPIRY_DAYS=30

# Payment Settings
PAYMENT_TIMEOUT_MINUTES=15
AUTO_CAPTURE_AUTHORIZED_PAYMENTS=false
REFUND_TIMEOUT_DAYS=30

# Fulfillment Settings
AUTO_FULFILL_ORDERS=false
TRACKING_UPDATES_ENABLED=true
SHIPPING_LABEL_GENERATION=false

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
WEBHOOK_NOTIFICATIONS_ENABLED=true

# Tax Configuration
TAX_CALCULATION_ENABLED=true
TAX_SERVICE_URL=http://localhost:8010
TAX_INCLUSIVE_PRICING=false

# Shipping Configuration
SHIPPING_CALCULATION_ENABLED=true
SHIPPING_SERVICE_URL=http://localhost:8011
FREE_SHIPPING_THRESHOLD=100.00

# Inventory Integration
INVENTORY_SERVICE_URL=http://localhost:8004
AUTO_RESERVE_INVENTORY=true
RESERVATION_TIMEOUT_MINUTES=30

# Customer Service Integration
CUSTOMER_SERVICE_URL=http://localhost:8012
LOYALTY_POINTS_ENABLED=false

# Analytics Settings
ORDER_ANALYTICS_ENABLED=true
REAL_TIME_REPORTING=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing Configuration
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Integration Settings
PRODUCT_CATALOG_SERVICE_URL=http://localhost:8003
MERCHANT_ACCOUNT_SERVICE_URL=http://localhost:8002
IDENTITY_SERVICE_URL=http://localhost:8001
PAYMENTS_SERVICE_URL=http://localhost:8006
PROMOTIONS_SERVICE_URL=http://localhost:8007

# File Export Settings
EXPORT_PATH=./exports
MAX_EXPORT_RECORDS=50000

# Backup Settings
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400  # Daily backups (seconds)
BACKUP_RETENTION_DAYS=90

# Security Settings
ENCRYPT_SENSITIVE_DATA=true
PCI_COMPLIANCE_MODE=false
AUDIT_ALL_CHANGES=true